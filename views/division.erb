<h1> <%= @division.title %> </h1>

<% if @employees.any? %>
<h2>Division Employees:</h2>

  <ul>
    <% @employees.each do |employee| %>
      <li><a href='/employees/<%=employee.id%>' ><%= employee.name %></a></li>
    <% end%>
  </ul>

<% else %>
  <p>You have not created any employees yet.</p>
<% end %>
<br><a class="btn btn-default" href="/employees/new">Add an Employee</a>

<h4>Update this Division:</h4>

<form action="/divisions/<%= @division.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Update Division Title:</label>
  <input id="title" name="title" type="text">

  <button type="submit">Update Division</button>
</form>

<form action= "/divisions/<%= @division.id() %>" method="post">
  <input name = "_method" type="hidden" value="delete">

  <button type="submit">Delete This Division</button>
</form>



